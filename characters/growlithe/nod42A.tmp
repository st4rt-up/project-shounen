script/source = "extends CharacterBody2D

const SPEED = 300.0

signal state_changed

var current_state = States.IDLE

enum States {
	IDLE,
	RUN,
	ATTACK_STARTUP,
	ATTACK_SPECIAL,
	ATTACK_PHYSICAL,
	ATTACK_RECOVERY
}

func _physics_process(delta):
	var input_vector = Input.get_vector(\"move_left\", \"move_right\", \"move_up\", \"move_down\").normalized()
	
	if sqrt(input_vector.x * input_vector.x + input_vector.y * input_vector.y) > 0:
		change_state(States.RUN)
	else:
		change_state(States.IDLE)
	
	if current_state == States.RUN:
		print(current_state)
		velocity = input_vector * SPEED
		
	elif current_state == States.IDLE:
		velocity.x = 0
		velocity.y = 0
	
	
	move_and_slide()

func change_state(new_state):
	
	state_changed.emit(new_state, current_state, Input.get_vector(\"move_left\", \"move_right\", \"move_up\", \"move_down\").normalized())
	current_state = new_state
	
"

